<div class="wrapper new-form-wrapper" style="background-image: linear-gradient(0deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.4) 20%), url(<%= asset_path 'banner.jpg' %>);">
  <div class="container">
    <div class="row new-form-row">
      <%= link_to "BACK", cocktail_path(@cocktail), class: "new-back-btn"  %>
      <%= link_to "HOME", :root, class: "new-home-btn" %>
      <h1 class="text-center form-title">Ingredient for <%= @cocktail.name %></h1>
      <div class="col col-xs-12 col-sm-6 col-sm-offset-3">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient %>
          <%= f.input :description, placeholder: "How much?" %>
          <div>
            <%= f.submit "Add ingredient", class: "btn-form btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>